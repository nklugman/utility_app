<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="15dp"
        android:paddingLeft="20dp">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/gridwatchlogo"
            android:id="@+id/imageView" />

    </LinearLayout>

    <TextView
        android:text="We are GridWatch team, located in California, USA. We are continously trying to improve electricity accessibility in every single country. "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:paddingLeft="40dp"
        android:paddingTop="15dp"
        android:paddingRight="40dp"
        android:paddingBottom="15dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:text="Your Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <TextView
        android:text="Your Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText4"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <TextView
        android:text="Your Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:weightSum="1"
        android:paddingBottom="10dp">

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"

            android:id="@+id/feedbackbox"
            android:layout_height="98dp"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:layout_marginLeft="10dp">

            <Button
                android:layout_width="56dp"
                android:layout_height="51dp"
                android:id="@+id/button5"
                android:background="@drawable/emailicon" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
