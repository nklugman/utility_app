<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bannerblue">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:layout_width="31dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/facebooklogo"
            android:id="@+id/newsfeedlogo"

            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <TextView
            android:text="FACEBOOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsfeedsource"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsfeedtime"
            android:layout_weight="1"
            android:text="2017.3.1"
            android:paddingRight="10dp"

            android:textColor="@color/colorGrey"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="end" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newsfeedcontent"
            android:ellipsize="end"
            android:lines="3"
            android:paddingLeft="15dp"
            android:textColor="@color/colorGrey"
            android:paddingBottom="5dp"
            android:paddingRight="10dp" />
        <TextView
            android:id="@+id/newsfeedshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="More."
            android:visibility="gone"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
