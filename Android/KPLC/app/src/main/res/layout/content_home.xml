<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home"
    tools:context="gridwatch.kplc.activities.HomeActivity"
    android:background="@color/cardview_light_background">


    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/background"
        android:id="@+id/background"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Good Afternoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome"
        android:textSize="@dimen/home_welcome_font_size" />

    <TextView
        android:text="Jan 8 2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textSize="@dimen/home_date_font_size"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="@dimen/home_welcome_layout_marginTop"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:text="Current Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_balance"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorGrey"
        android:layout_below="@+id/background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="20"
        android:ems="10"
        android:id="@+id/balance"
        android:clickable="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/current_balance"
        android:layout_alignLeft="@+id/current_balance"
        android:layout_alignStart="@+id/current_balance"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorGrey"
         />
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/balance"
        android:id="@+id/border1"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/current_balance"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/black" />
    <TextView
        android:text="Last Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border1"
        android:id="@+id/last_update"
        android:textSize="@dimen/text_size"
        android:layout_alignLeft="@+id/balance"
        android:layout_alignStart="@+id/balance"
        android:textColor="@color/colorGrey" />

    <Button
        android:text="Check the Balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/check_balance"
        android:textSize="@dimen/text_size"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/last_update"
        android:layout_alignLeft="@+id/last_update"
        android:layout_alignStart="@+id/last_update"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/check_balance"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrey"
        android:id="@+id/divider" />
    <TextView
        android:text="Last Statement Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_payment"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorGrey"
        android:layout_below="@+id/divider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="Name"
        android:ems="10"
        android:id="@+id/payment"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorGrey"
        android:clickable="false"
        android:layout_below="@+id/current_payment"
        android:layout_alignLeft="@+id/current_payment"
        android:layout_alignStart="@+id/current_payment" />
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/payment"
        android:id="@+id/border2"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/current_balance"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/black" />
    <TextView
        android:text="Payment Due:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border2"
        android:id="@+id/payment_due"
        android:textSize="@dimen/text_size"
        android:layout_alignLeft="@+id/balance"
        android:layout_alignStart="@+id/balance"
        android:textColor="@color/colorGrey" />

    <Button
        android:text="Make the Payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/make_payment"
        android:textSize="@dimen/text_size"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/payment_due"
        android:layout_alignLeft="@+id/last_update"
        android:layout_alignStart="@+id/last_update"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />




</RelativeLayout>
