<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/cardview_light_background"
   android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:text="Welcome"
        android:textColor="@color/tw__composer_white"
        android:gravity="top|center"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:paddingTop="80dp"
        android:background="@drawable/background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter Your Meter Number"
        android:textColor="@color/tw__composer_black"
        android:gravity="center"
        android:textSize="22dp"
        android:fontFamily="sans-serif"
        android:paddingTop="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:paddingTop="30dp"
        android:layout_gravity="center"
        android:gravity="bottom|center_vertical|center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:weightSum="1">

        <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:textSize="20dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="15dp"
                   />
    </LinearLayout>


</LinearLayout>
